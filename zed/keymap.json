// references:
//  1. https://gist.github.com/oca159/0b480ed6555056418905b6e59af33674
//  2. https://github.com/mrnugget/dotfiles/blob/master/zed_keymap.json
[
  {
    "context": "Workspace && !(Editor && vim_mode == insert)",
    "bindings": {
      // open file tree
      "space e": "workspace::ToggleLeftDock",
      // open terminal
      "ctrl-/": "workspace::ToggleBottomDock",
      // open
      "space a": "workspace::ToggleRightDock"
    }
  },
  {
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {}
  },
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual)",
    "bindings": {
      // pane
      "space -": "pane::SplitDown",
      "space |": "pane::SplitRight",
      // buffer / tab
      "space b h": "pane::ActivateNextItem",
      "space b l": "pane::ActivatePreviousItem",
      // git
      "space g b": "git::Blame"
    }
  }
]
